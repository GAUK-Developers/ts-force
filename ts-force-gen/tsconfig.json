{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "importHelpers": true,
    "listFiles": false,
    "traceResolution": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "sourceMap": true,
    "pretty": true,
    "noImplicitAny": false,
    "types": [
      "node",
    ],
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
